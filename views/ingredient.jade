    // ส่วนของ การกด +add แล้วจะขึ้น Modal ขึ้นมาให้กรอกข้อมูลเพิ่มรายการวัตถุดิบ
    .container
      input.btn.btn-info(type='submit' value='Submit')
      // Button to Open the Modal
      button.btn.btn-primary(type='button' data-toggle='modal' data-target='#myModal')
        | +Add Ingredient
      // The Modal
      #myModal.modal.fade
        .modal-dialog
          .modal-content
            // Modal Header
            .modal-header
              h4.modal-title เพิ่มรายการวัตถุดิบ
              button.close(type='button' data-dismiss='modal') ×
            // Modal body
            .modal-body
              form(action='/action_page.php')
                .form-group
                  label(for='name') Name:
                  input#name.form-control(type='text' placeholder='Name Ingredient')
                .form-group
                  label(for='amount') Amount:
                  input#amount.form-control(type='number' min='1' max='10' value='0' placeholder='Amount Ingredient')
                .form-group
                  .dropdown
                    label(for='unit') Unit:
                    button#unit.btn.btn-primary.dropdown-toggle(type='button' data-toggle='dropdown')
                      | choose...
                    #unit.dropdown-menu
                      a.dropdown-item(href='#') ml. (มิลลิกรัม)
                      a.dropdown-item(href='#') g. (กรัม)
                      a.dropdown-item(href='#') tsp. (ช้อนชา)
                      a.dropdown-item(href='#') tbsp. (ช้อนโต๊ะ)
                      a.dropdown-item(href='#') cup (ถ้วย)
            // Modal footer
            .modal-footer
              button.btn.btn-primary(type='submit' onclick='test()' value='submit') Submit
              button.btn.btn-danger(type='button' data-dismiss='modal') Close
