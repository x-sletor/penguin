              .form-group
                label(for='unit') Unit:
                input#unit.form-control(type='text' placeholder='Unit Topping')
              button.btn.btn-primary(type='submit' onclick='alert_top()' value='submit') Submit
          // Modal footer
          .modal-footer
            button.btn.btn-danger(type='button' data-dismiss='modal') Close
